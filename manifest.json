{
    "manifest_version": 3,
    "name": "URL List Manager",
    "version": "1.0",
    "description": "Manage a list of URLs via a popup interface.",
    "permissions": ["storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "img/icon_16x16.png",
            "48": "img/icon_48x48.png",
            "128": "img/icon_128x128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
